$ ->
  img_path = '/images/emoji/'

  emojify.setConfig({
    img_dir: img_path
  })

  emojies = <%= Dir.glob('public/images/emoji/*').map{ |v| File.basename(v,'.png') } %>
  
  $('.markdown-content textarea').textcomplete [ {
    match: /\B:([\-+\w]*)$/
    search: (term, callback) ->
      callback $.map(emojies, (emoji) ->
        if emoji.indexOf(term) == 0 then emoji else null
      )
      return
    template: (value) ->
      "<img class='emoji-suggest' src='#{img_path}#{value}.png'/>  #{value}"
    replace: (value) ->
      ":#{value}: "
    index: 1
    maxCount: 8
  } ]

  
